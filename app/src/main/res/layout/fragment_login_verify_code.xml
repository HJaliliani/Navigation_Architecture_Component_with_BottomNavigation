<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".view.fragment.FragmentLoginVerifyCode"
             android:background="@color/colorAccent">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/verify_mobile"
                android:id="@+id/txtVFrg3"     />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"

                android:background="@drawable/shadow_edittext"
                android:id="@+id/editTextVerifyCode"
                app:layout_constraintEnd_toEndOf="@+id/txtVFrg3" app:layout_constraintStart_toStartOf="@+id/txtVFrg3"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/txtVFrg3" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtVFrg3"/>
        <Button
                android:text="@string/next_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_next_navigation_activity" app:layout_constraintEnd_toEndOf="@+id/editTextVerifyCode"
                app:layout_constraintStart_toStartOf="@+id/editTextVerifyCode"
                app:layout_constraintTop_toBottomOf="@+id/editTextVerifyCode"/>
        <TextView
                android:text="Enter Verify Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintBottom_toTopOf="@+id/editTextVerifyCode" app:layout_constraintEnd_toEndOf="@+id/editTextVerifyCode"
                app:layout_constraintStart_toStartOf="@+id/editTextVerifyCode"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>